{
	// 使用 npm 脚本进行构建与监听
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: compile",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "npm: watch",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "webpack",
					"fileLocation": [
						"auto"
					],
					"pattern": {
						"regexp": "^.*$",
						"file": 1,
						"location": 2,
						"message": 3
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*webpack.*watching.*$",
						"endsPattern": "^.*compiled successfully.*$"
					}
				}
			]
		}
	]
}
// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}